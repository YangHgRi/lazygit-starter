{
  "name": "lazygit-starter",
  "publisher": "HenryYang",
  "icon": "icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/YangHgRi/lazygit-starter"
  },
  "displayName": "Lazygit Starter",
  "description": "Open lazygit in a new terminal tab from a folder context menu.",
  "version": "0.0.7",
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": [
    "SCM Providers",
    "Other"
  ],
  "keywords": [
    "git",
    "lazygit",
    "terminal",
    "workflow",
    "tui"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "lazygit-starter.openLazygit",
        "title": "Open with lazygit"
      },
      {
        "command": "lazygit-starter.refresh",
        "title": "Refresh",
        "icon": "$(refresh)"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "command": "lazygit-starter.refresh",
          "when": "webviewId == 'lazygit'",
          "group": "navigation"
        }
      ],
      "explorer/context": [
        {
          "when": "explorerResourceIsFolder",
          "command": "lazygit-starter.openLazygit",
          "group": "lazygit-starter"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "package": "vsce package -o out",
    "deploy:patch": "npm version patch -m \"chore: release %s\" && vsce publish",
    "deploy:minor": "npm version minor -m \"chore: release %s\" && vsce publish",
    "deploy:major": "npm version major -m \"chore: release %s\" && vsce publish"
  },
  "devDependencies": {
    "@types/node": "16.x",
    "@types/vscode": "^1.75.0",
    "@typescript-eslint/eslint-plugin": "^5.53.0",
    "@typescript-eslint/parser": "^5.53.0",
    "@vscode/vsce": "^2.19.0",
    "eslint": "^8.34.0",
    "typescript": "^4.9.5"
  },
  "dependencies": {
    "node-pty": "^1.1.0",
    "xterm": "^5.3.0",
    "xterm-addon-fit": "^0.8.0",
    "xterm-addon-webgl": "^0.16.0"
  }
}
